<% layout('layouts/boilerplate') %>

<style>
        
        .welcome-container {
            background-color: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            margin: 100px;
        }
        h1 {
            color: #5a5a5a;
            font-size: 2.5rem;
            margin-bottom: 10px;
        }
        p {
            font-size: 1.2rem;
            line-height: 1.6;
            color: #666;
        }
        .cta-buttons {
            margin-top: 25px;
        }
        .cta-buttons a {
            text-decoration: none;
            color: #fff;
            background-color: #fe424d;
            padding: 12px 25px;
            border-radius: 5px;
            margin: 0 10px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }
        .cta-buttons a:hover {
            background-color: #fe424d;
        }
    </style>
<div class="welcome-container">
        <% if (currUser && currUser.username) { %>
            <h1>Welcome, <%= currUser.username %>!</h1>
            <p>We're so glad to have you back. What would you like to do today?</p>
        <% } else { %>
            <h1>Welcome to Our Wanderlust!</h1>
            <p>Discover amazing things and explore our community. Join us to get started.</p>
        <% } %>
        
        <div class="cta-buttons">
            <% if (!currUser) { %>
                <a href="/login">Log In</a>
                <a href="/signup">Sign Up</a>
            <% } else { %>
                <a href="/listings">Explore </a>
                <a href="/listings/new">Wanderlust your home</a>
            <% } %>
        </div>
    </div>